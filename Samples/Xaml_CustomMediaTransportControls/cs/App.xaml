<Application
    x:Class="CustomMediaTransportControls.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CustomMediaTransportControls"
    RequestedTheme="Light">

    <!--You can add resources here to control the color and other aspects of your media controls-->
    <Application.Resources>
        <ResourceDictionary>
            <!--The following brush is what we are using to set the color of our custom transport controls. You can check out Themes/generic.xaml to see
            where in the template this is being applied.-->
            <SolidColorBrush x:Key="sliderBrush" Color="Aqua" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
